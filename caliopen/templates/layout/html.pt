    <![endif]-->
    <script src="${request.static_url('caliopen:static/js/less-1.7.0.min.js')}" type="text/javascript"></script>
  </head>

  <body>
    <header metal:define-slot="header"></header>
    <main metal:define-slot="content"></main>
    <footer metal:define-slot="footer"></footer>

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>

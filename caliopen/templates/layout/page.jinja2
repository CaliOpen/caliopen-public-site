{% extends "html.jinja2" %}

{% block header %}
  {{ super() }}
  <a href="https://github.com/CaliOpen/CaliOpen">
    <img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/e7bbb0521b397edbd5fe43e7f760759336b5e05f/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677265656e5f3030373230302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png" />
  </a>

  <div class="layout">
    <div>
      <div class="title">
        <h1><a href="{{'home'|route_path}}" title="Caliopen">Caliopen</a></h1>
      </div>

      <div class="nav">
        <nav role="navigation">
          <ul>
            <li id="navigation-main-take-a-tour">
              {% if active_nav == 'take_a_tour' %}
                <span class="button">{{ _('Take a tour') }}</span>
              {% else %}
                <a href="{{'tour'|route_path}}" class="button">{{ _('Take a tour') }}</a>
              {% endif %}
            </li>
            <li id="navigation-main-about">
              {% if active_nav == 'about' %}
                <span class="button">{{ _('About') }}</span>
              {% else %}
                <a href="{{'about'|route_path}}" class="button">{{ _('About') }}</a>
              {% endif %}
            </li>
            <li id="navigation-main-features">
              {% if active_nav == 'features' %}
                <span class="button">{{ _('Features') }}</span>
              {% else %}
                <a href="{{'features'|route_path}}" class="button">{{ _('Features') }}</a>
              {% endif %}
            </li>
            <li id="navigation-main-contact-us">
              {% if active_nav == 'contact' %}
                <span class="button">{{ _('Contact us') }}</span>
              {% else %}
                <a href="{{'contact'|route_path}}" class="button">{{ _('Contact us') }}</a>
              {% endif %}
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
{% endblock %}

{% block footer %}
  {{ super() }}
  <div class="layout">
    <div>
      <div class="gandi">
        <p id="support-by-gandi" class="column">{{ _('A project supported by') }}
        <a href="http://www.gandi.net" title="Gandi.net" class="logo">Gandi.net</a></p>
      </div>

      <div class="sitemap">
        <div>
          <ul class="footer-links column">
            <li id="footer-link-product" class="list-title">{{ _('Product') }}</li>
            <li id="footer-link-origins"><a href="{{'about'|route_path}}">{{ _('The origins') }}</a></li>
            <li id="footer-link-download"><a href="https://github.com/CaliOpen/CaliOpen/archive/master.zip">{{ _('Download') }}</a></li>
          </ul>
        </div>

        <div>
          <ul class="footer-links column">
            <li id="footer-link-community" class="list-title">{{ _('Community') }}</li>
            <li id="footer-link-fork-us"><a href="https://github.com/CaliOpen/CaliOpen">{{ _('Fork us on GitHub') }}</a></li>
            <li id="footer-link-blog"><a href="/">{{ _('Visit our blog') }}</a></li>
          </ul>
        </div>
      </div>

      <div class="social">
        <a href="http://www.twitter.com" class="twitter">Twitter</a>
        <a href="http://www.facebook.com" class="facebook">Facebook</a>
      </div>
    </div>

    <div>
      <div class="copyright">
        <p id="copyright">Â© 2014 CaliOpen</p>
      </div>
    </div>
  </div>
{% endblock %}
